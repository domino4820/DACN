{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "rules": {
        "type-enum": [
            2,
            "always",
            [
                "feat",
                "fix",
                "docs",
                "refactor",
                "chore",
                "revert"
            ]
        ],
        "subject-empty": [
            2,
            "never"
        ],
        "type-empty": [
            2,
            "never"
        ]
    }
}
